<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>idp</servlet-name>
    <servlet-class>org.apache.hadoop.gateway.GatewayServlet</servlet-class>
    <init-param>
      <param-name>gatewayDescriptorLocation</param-name>
      <param-value>gateway.xml</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>idp</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>principal.mapping</param-name>
    <param-value/>
  </context-param>
  <context-param>
    <param-name>group.principal.mapping</param-name>
    <param-value/>
  </context-param>
  <context-param>
    <param-name>knoxsso.cookie.secure.only</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>knoxsso.token.ttl</param-name>
    <param-value>100000</param-value>
  </context-param>
  <listener>
    <listener-class>org.apache.hadoop.gateway.services.GatewayServicesContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.apache.hadoop.gateway.filter.rewrite.api.UrlRewriteServletContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>rewriteDescriptorLocation</param-name>
    <param-value>/WEB-INF/rewrite.xml</param-value>
  </context-param>
</web-app>
